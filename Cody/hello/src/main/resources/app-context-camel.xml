<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:camel="http://camel.apache.org/schema/spring"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://camel.apache.org/schema/spring
                           http://camel.apache.org/schema/spring/camel-spring.xsd">

    <!--<bean id="fileTransferType" class="com.jp.camel.hello.route.FileTransferType" init-method="fromLetter"/>-->

    <bean id="fileTransferRouteBuilder" class="com.jp.camel.hello.route.FileTransferRouteBuilder">
       <constructor-arg>
        <value type="com.jp.camel.hello.route.FileTransferType">MOVE</value>
    </constructor-arg>
    </bean>

   <camel:camelContext id="camel">
        <camel:routeBuilder ref="fileTransferRouteBuilder"/>
    </camel:camelContext>
</beans>

